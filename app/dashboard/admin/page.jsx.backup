        {activeView === "attendance" && (
          <div>
            <div style={styles.header}>
              <h2 style={styles.sectionTitle}>Attendance Management</h2>
            </div>

            <div style={styles.activitiesGrid}>
              {events.length === 0 ? (
                <p style={styles.emptyState}>No events available for attendance tracking</p>
              ) : (
                events.map((event) => (
