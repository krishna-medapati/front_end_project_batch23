            {showAttendees && selectedEvent && (
              <div style={styles.modal} onClick={() => setShowAttendees(false)}>
                <div style={styles.modalContent} onClick={(e) => e.stopPropagation()}>
                  <div style={styles.modalHeader}>
                    <h3 style={styles.modalTitle}>Event Attendees - {selectedEvent.title}</h3>
