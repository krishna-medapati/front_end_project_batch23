                      ‚úï
                    </button>
                  </div>
                  <div style={styles.eventInfo}>
                    <p><strong>Date:</strong> {new Date(selectedEventForAttendance.date).toLocaleDateString()}</p>
                    <p><strong>Time:</strong> {selectedEventForAttendance.time}</p>
                    <p><strong>Points:</strong> {selectedEventForAttendance.pointsPerEvent || 10} pts</p>
                  </div>
                  <div style={styles.studentsList}>
                    {(!selectedEventForAttendance.attendees || selectedEventForAttendance.attendees.length === 0) &&
                    (!selectedEventForAttendance.activityEnrolledStudents || selectedEventForAttendance.activityEnrolledStudents.length === 0) ? (
                      <p style={styles.emptyState}>No registered attendees or enrolled students</p>
                    ) : (
                      // Show both event attendees AND activity-enrolled students
                      [
                        ...(selectedEventForAttendance.attendees || []),
                        ...(selectedEventForAttendance.activityEnrolledStudents || []),
                      ]
                        // Remove duplicates based on _id
                        .filter((student, index, self) => 
                          student && student._id && self.findIndex(s => s && s._id === student._id) === index
                        )
                        .map((attendee) => {
                          const hasAttended = selectedEventForAttendance.attendance?.some(
                            a => a.studentId?._id === attendee._id || a.studentId === attendee._id
                          )
                          return (
                            <div key={attendee._id} style={styles.attendanceCard}>
                              <div>
                                <p style={styles.studentName}>{attendee.name}</p>
                                <p style={styles.studentEmail}>{attendee.email}</p>
                              </div>
                              <button
                                style={hasAttended ? styles.presentBtn : styles.markPresentBtn}
                                onClick={async () => {
                                  if (hasAttended) {
                                    alert("Attendance already marked")
                                    return
                                  }
                                  try {
                                    const token = localStorage.getItem("token")
                                    const response = await fetch(
                                      `${API_BASE_URL}/api/events/${selectedEventForAttendance._id}/attendance`,
                                      {
                                        method: "POST",
                                        headers: {
                                          Authorization: `Bearer ${token}`,
                                          "Content-Type": "application/json",
                                        },
                                        body: JSON.stringify({
                                          studentId: attendee._id,
                                          status: "present",
                                        }),
                                      }
                                    )
                                    if (response.ok) {
                                      alert(`Attendance marked successfully! ${selectedEventForAttendance.pointsPerEvent || 10} points awarded to ${attendee.name}`)
                                      setShowAttendanceModal(false)
                                      const token = localStorage.getItem("token")
                                      fetchData(token) // Refresh all data including users
                                    } else {
                                      const data = await response.json()
                                      alert(data.message || "Failed to mark attendance")
                                    }
                                  } catch (error) {
                                    alert("Error marking attendance")
                                  }
                                }}
                                disabled={hasAttended}
                              >
                                {hasAttended ? "‚úì Present" : "Mark Present"}
                              </button>
                            </div>
                          )
                        })
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  )
}

