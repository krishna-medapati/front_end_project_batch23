                  />
                  <textarea
                    placeholder="Description"
                    value={newActivity.description}
                    onChange={(e) => setNewActivity({ ...newActivity, description: e.target.value })}
                    style={{ ...styles.textarea, gridColumn: "1 / -1" }}
                    rows={3}
                  />
                </div>
                <button style={styles.submitBtn} onClick={createActivity}>
                  Create Activity
                </button>
              </div>
            )}

            <div style={styles.activitiesGrid}>
              {activities.length === 0 ? (
                <p style={styles.emptyState}>No activities created yet</p>
              ) : (
                activities.map((activity) => (
                  <div key={activity._id} style={styles.activityCard}>
                    <div style={styles.activityHeader}>
                      <h3 style={styles.activityTitle}>{activity.name}</h3>
                      <span style={styles.badge}>{activity.category}</span>
