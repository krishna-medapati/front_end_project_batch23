          <p style={styles.userInfo}>Email: {user.email}</p>
          <p style={styles.userInfo}>Role: {user.role}</p>
          <p style={styles.statusBadge}>
            Status: {user.roleStatus === "approved" ? "‚úÖ Approved" : "‚è≥ Pending Approval"}
          </p>
        </div>

        <div style={styles.tabs}>
          <button
            style={activeView === "dashboard" ? styles.tabActive : styles.tab}
            onClick={() => setActiveView("dashboard")}
          >
            üè† Dashboard
          </button>
          <button
            style={activeView === "activities" ? styles.tabActive : styles.tab}
