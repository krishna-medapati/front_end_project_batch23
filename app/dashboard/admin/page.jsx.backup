              </div>

              <div style={styles.featureCard} onClick={() => setActiveView("notifications")}>
                <h3 style={styles.featureTitle}>üì¢ Notifications</h3>
                <p style={styles.featureDesc}>Send notifications to students</p>
              </div>

              <div style={styles.featureCard} onClick={() => setActiveView("attendance")}>
                <h3 style={styles.featureTitle}>‚úÖ Attendance</h3>
                <p style={styles.featureDesc}>Manage attendance and QR code scanning</p>
              </div>
            </div>
          </div>
        )}

        {activeView === "activities" && (
          <div>
            <div style={styles.header}>
              <h2 style={styles.sectionTitle}>Activities Management</h2>
              <button style={styles.createBtn} onClick={() => setShowCreateActivity(!showCreateActivity)}>
