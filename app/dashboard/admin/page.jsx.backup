                  <div style={styles.eventInfo}>
                    <p><strong>Date:</strong> {new Date(selectedEvent.date).toLocaleDateString()}</p>
                    <p><strong>Time:</strong> {selectedEvent.time}</p>
                    <p><strong>Location:</strong> {selectedEvent.location}</p>
                  </div>
                  <div style={styles.studentsList}>
                    {selectedEvent.attendees?.length === 0 ? (
                      <p style={styles.emptyState}>No attendees registered yet</p>
                    ) : (
                      selectedEvent.attendees?.map((attendee, index) => (
                        <div key={attendee._id || index} style={styles.studentCard}>
                          <div>
                            <p style={styles.studentName}>{attendee.name || "Attendee"}</p>
                            <p style={styles.studentEmail}>{attendee.email || "No email"}</p>
