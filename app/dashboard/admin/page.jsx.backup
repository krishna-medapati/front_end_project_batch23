                  </div>
                  <div style={styles.studentsList}>
                    {!selectedActivity.enrolledStudents || selectedActivity.enrolledStudents.filter(s => s && s._id).length === 0 ? (
                      <p style={styles.emptyState}>No valid student records found</p>
                    ) : (
                      selectedActivity.enrolledStudents
                        .filter(student => student && student._id)
                        .map((student, index) => (
