        {activeView === "users" && (
          <div>
            <div style={styles.header}>
              <h2 style={styles.sectionTitle}>User Management</h2>
              <select
                value={userFilter}
                onChange={(e) => setUserFilter(e.target.value)}
                style={styles.filterSelect}
              >
                <option value="all">All Users</option>
                <option value="student">Students Only</option>
                <option value="admin">Admins Only</option>
              </select>
            </div>
            
            <div style={styles.statsRow}>
              <div style={styles.statCard}>
                <h3 style={styles.statNumber}>{users.filter(u => u.role === 'student').length}</h3>
                <p style={styles.statLabel}>Students</p>
              </div>
              <div style={styles.statCard}>
                <h3 style={styles.statNumber}>{users.filter(u => u.role === 'admin').length}</h3>
                <p style={styles.statLabel}>Admins</p>
              </div>
              <div style={styles.statCard}>
                <h3 style={styles.statNumber}>{users.length}</h3>
                <p style={styles.statLabel}>Total Users</p>
              </div>
            </div>

            <div style={styles.usersTable}>
              <div style={{
                ...styles.tableHeader,
                gridTemplateColumns: userFilter === "admin" ? "2fr 2fr 1fr" : "2fr 2fr 1fr 1fr 1.5fr"
              }}>
                <div style={styles.tableHeaderCell}>Name</div>
                <div style={styles.tableHeaderCell}>Email</div>
                <div style={styles.tableHeaderCell}>Role</div>
                {userFilter !== "admin" && <div style={styles.tableHeaderCell}>Points</div>}
                {userFilter !== "admin" && <div style={styles.tableHeaderCell}>Enrolled Activities</div>}
              </div>
              {users.filter(user => userFilter === "all" || user.role === userFilter).length === 0 ? (
                <p style={styles.emptyState}>No users found</p>
              ) : (
                users
                  .filter(user => userFilter === "all" || user.role === userFilter)
                  .map((user) => (
                  <div key={user._id} style={{
                    ...styles.tableRow,
                    gridTemplateColumns: userFilter === "admin" ? "2fr 2fr 1fr" : "2fr 2fr 1fr 1fr 1.5fr"
                  }}>
                    <div style={styles.tableCell}>
                      <p style={styles.userName}>{user.name || 'N/A'}</p>
                    </div>
                    <div style={styles.tableCell}>
                      <p style={styles.userEmail}>{user.email || 'N/A'}</p>
                    </div>
                    <div style={styles.tableCell}>
                      <span style={user.role === 'admin' ? styles.adminBadge : styles.studentBadge}>
                        {user.role || 'student'}
                      </span>
                    </div>
                    {userFilter !== "admin" && (
                      <div style={styles.tableCell}>
                        <p style={styles.pointsText}>{user.points || 0} pts</p>
                      </div>
                    )}
                    {userFilter !== "admin" && (
                      <div style={styles.tableCell}>
                        <p style={styles.enrollmentText}>
                          {user.enrolledActivities?.length || 0} activities
                        </p>
                      </div>
                    )}
                  </div>
                ))
              )}
            </div>
          </div>
        )}

        {activeView === "notifications" && (
          <div>
            <div style={styles.header}>
              <h2 style={styles.sectionTitle}>Send Notifications</h2>
            </div>

            <div style={styles.formCard}>
              <h3 style={styles.formTitle}>Create Notification</h3>
              <div style={styles.formGrid}>
                <input
                  type="text"
                  placeholder="Notification Title"
                  value={notification.title}
                  onChange={(e) => setNotification({ ...notification, title: e.target.value })}
                  style={{ ...styles.input, gridColumn: "1 / -1" }}
                />
                <textarea
                  placeholder="Notification Message"
                  value={notification.message}
                  onChange={(e) => setNotification({ ...notification, message: e.target.value })}
                  style={{ ...styles.textarea, gridColumn: "1 / -1" }}
                  rows={5}
                />
                <select
                  value={notification.targetRole}
                  onChange={(e) => setNotification({ ...notification, targetRole: e.target.value })}
                  style={styles.input}
                >
                  <option value="all">All Users</option>
                  <option value="student">Students Only</option>
                  <option value="admin">Admins Only</option>
                </select>
