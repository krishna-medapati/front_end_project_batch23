                            [
                              ...(event.attendees || []),
                              ...(event.activityEnrolledStudents || []),
                            ]
                              .filter((s, i, arr) => s && s._id && arr.findIndex(st => st && st._id === s._id) === i)
                              .length
                          }
                        </span>
                      </div>
                      <div>
                        <span style={styles.statLabel}>Attended:</span>
                        <span style={styles.statValue}> {event.attendance?.length || 0}</span>
                      </div>
                    </div>
